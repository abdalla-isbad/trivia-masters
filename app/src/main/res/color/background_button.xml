<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#e67e22" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#D07321" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#e67e22" />
    <!--Default Background Color -->
    <item android:color="#e67e22" />

</selector>